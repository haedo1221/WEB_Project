{{> /layout/header}}

<!-- 컨테이너 시작 -->
<div class="content_box mt-3">
  <div class="form_box">
    <div class="fyi_box1">가입시 이름과 이메일 주소가 같아야,</div>
    <div class="fyi_box2">아이디를 확인할 수 있습니다.</div>

    <!-- 아이디 찾기 폼 시작-->
    <div class="form_box2">
      <div class="form_text_box1">
        <form action="/user/id-find" method="post">
          <div class="mb-3 mt-3">
            <input type="text" class="form-control" placeholder="이름" name="name" id="name" required>
          </div>
          <div class="mb-3 mt-3">
            <input type="email" class="form-control" placeholder="이메일" maxlength="30" name="email" id="email">
          </div>
          <div class="btn_lg_box">
            <button type="submit" class="btn btn_md">확인</button>
          </div>
          <div class="btn_sm_box">
            <div class="btn_sm"><a href="/user/password-reset-form">비밀번호 찾기</a></div>
            <div class="btn_sm"><a href="/login-form">로그인</a></div>
          </div>
        </form>
      </div>
    </div>
    <!-- 아이디 찾기 폼 종료-->
  </div>
</div>
